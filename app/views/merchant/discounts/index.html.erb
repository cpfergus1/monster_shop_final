<% link_to 'Create New Discount', new_merchant_discount_path(@merchant) %>

<table align = "CENTER">
  <tr align = "center">
    <td>Discount Name</td>
    <td>Required Items</td>
    <td>Total Discount</td>
    <td>Date Created</td>
  </tr>
  <% @discounts.each do |discount| %>
    <tr id = "discount-<%=discount.id%>" align = 'center'>
        <td><%= discount.name %></td>
        <td>Applies when <%= discount.items_req %> or more items are ordered</td>
        <td><%= discount.discount %>%</td>
        <td><%= discount.created_at %></td>
      </tr>
  <% end %>
</table>
